- if notice
  %p#notice= notice
.cart_title Your Cart
%table
  - for item in @cart.line_items
    %tr
      %td 
        = item.quantity
        &times;
      %td 
        = item.product.title
      %td.item_price 
        = number_to_currency item.total_price
      %td
        = link_to '[X]', item, :method => :delete, :confirm => 'Are you sure?'
  %tr.total_line
    %td{:colspan => 2} Total
    %td.total_cell
      = number_to_currency @cart.total_price
    %td &nbsp;
  

= button_to 'Empty cart', @cart, :method => :delete, :confirm => 'Are you sure?'
